{
  "name": "itviec",
  "version": "1.0.0",
  "description": "Dự án này sử dụng Cypress hướng BDD để kiểm thử tự động web.",
  "main": "cypress.config.js",
  "scripts": {
  "test:run": "npx cypress run --env allure=true",
  "allure:generate": "allure generate allure-results --clean -o allure-report",
  "allure:open": "allure open allure-report",
  "test:report": "npm run test:run && npm run allure:generate && npm run allure:open"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^15.2.0",
    "cypress-cucumber-preprocessor": "^4.3.1"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinations": true,
    "stepDefinitions": "cypress/e2e/step_definitions/"
  }
}
